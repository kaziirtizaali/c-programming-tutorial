<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ratul.cprogrammingtutorial.Quiz">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAboutQuiz"
            android:text="Test your C Programming knowledge. All the questions are very simple. Read and practice more !!"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#000000"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_start_now"
        android:textColor="#000000"
        android:id="@+id/btnStart"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
